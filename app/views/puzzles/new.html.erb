
<div class="outer">
  <div class="inner">

    <%= form_for(@puzzle) do |f| %>
      
      <%= render 'shared/error_messages' %>

      <%= f.label :board, "Board (an 81 character numeric string with zeroes for blanks)" %>
      <%= f.text_field :board, class: 'form-control' %>
      
      <% difficulties = ["easy","middling","tough"] %>
      <%= f.label :difficulty, "Difficulty" %>
      <%= f.select :difficulty, difficulties.map { |value| [ value, value ] }, {}, class: 'form-control' %>
      
      <% ratings = ["1", "2", "3", "4", "5"] %>
      <%= f.label :rating, "Rating" %>
      <%= f.select :rating, ratings.map { |value| [ value, value ] }, {}, class: 'form-control' %> 

      <center>
        <%= f.submit "Create a new puzzle", class: "btn btn-primary" %>
      </center>
    <% end %>

  </div>
</div>