
<div class="outer">
  <div class="inner form-container">

    <%= form_for(@puzzle) do |f| %>
      
      <%= render 'shared/error_messages' %>

      <%= f.label :board, "Board, (an 81 character numeric string with zeroes for blanks)" %>
      <%= f.text_field :board, class: 'form-control' %>
      
      <%= f.label :difficulty, "Difficulty, (a string: easy, middling or tough)" %>
      <%= f.text_field :difficulty, class: 'form-control' %>
            
      <%= f.label :rating, "Rating, (an integer: 1-5)" %>
      <%= f.text_field :rating, class: 'form-control'%>

      <center>
        <%= f.submit "Create a new puzzle", class: "btn btn-primary" %>
      </center>
    <% end %>

  </div>
</div>